@model IEnumerable<ExpressBookerProject.Models.booking>

@{
    ViewBag.Title = "View Bookings";
}
@Html.Raw(TempData["Message"])
<h2>View Bookings</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Booking Date
            </th>
            <th>
                Seat Number
            </th>
            <th>
                Status
            </th>
            <th>
                Bus Name
            </th>
            <th>
                Source
            </th>
            <th>
                Destination
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.bookingdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.seatnumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.bus.busnumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.route.source)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.route.destination)
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Back to Admin Dashboard", "AdminDashboard", "Admin")
